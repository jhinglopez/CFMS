@using CCP.Web.CFMS.Web.Libraries.Core

@{
    ViewBag.Title = "UtilitiesDetail";
}

@section styles
{
    <style>
        .ui.table tr td {
            border-bottom: none;
            border-top: none;
        }

        .ui.basic.table tbody tr {
            border-bottom: none;
            border-top: none;
        }
    </style>
}

<div class="ui breadcrumb">
    <a class="section" href="/">Home</a>
    <div class="divider"> / </div>
    <div class="section">Maintenance</div>
    <div class="divider"> / </div>
    <a class="section" href="/Maintenance/Utilities">Utilities</a>
    <div class="divider"> / </div>
    <div class="active section">Detail</div>
</div>

<div style="padding-top:40px;">
    <div align="right">
        <button id="btnSave" class="ui primary button" style="width:120px;">Save</button>
        <button id="btnReturn" class="ui button">Return</button>
    </div>
    <hr />
    <div style="padding-top:10px;" align="center">
        <table class="ui very basic collapsing table" style="width:100%; max-width:800px;">
            <tbody>
                <tr>
                    <td class="collapsing">
                        <label>Utility Name *</label>
                    </td>
                    <td>
                        <div class="ui input" style="width:100%"><input id="txtName" type="text" maxlength="256" /></div>
                    </td>
                </tr>
                <tr>
                    <td class="collapsing">
                        <label>Utility Type *</label>
                    </td>
                    <td>
                        <div id="ddlType" class="ui fluid selection dropdown">
                            <input id="txtType" name="txtType" type="hidden">
                            <i class="dropdown icon"></i>
                            <div class="default text">-- select utility type --</div>
                            <div id="divTypes" class="menu">
                                @Html.Raw(ViewBag.Items)
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<input type="hidden" id="__id" value="@ViewBag.Id" />

@section scripts
{
    <script type="text/javascript" src="/js/app/utilities/edit.js?v=@Env.Versioning()"></script>
}