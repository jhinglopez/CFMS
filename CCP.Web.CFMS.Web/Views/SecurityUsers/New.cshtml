@using CCP.Web.CFMS.Web.Libraries.Core

@{
    ViewBag.Title = "User New";
}

@section styles
{
    <style>
        .ui.table tr td {
            border-bottom: none;
            border-top: none;
        }

        .ui.basic.table tbody tr {
            border-bottom: none;
            border-top: none;
        }
    </style>
}

<div class="ui breadcrumb">
    <a class="section" href="/">Home</a>
    <div class="divider"> / </div>
    <div class="section">Security</div>
    <div class="divider"> / </div>
    <a class="section" href="/Security/Users">Users</a>
    <div class="divider"> / </div>
    <div class="active section">New</div>
</div>

<div style="padding-top:40px;">
    <div align="right">
        <button id="btnSave" class="ui primary button" style="width:120px;">Save</button>
        <button id="btnReturn" class="ui button">Return</button>
    </div>
    <hr />
    <div style="padding-top:10px;" align="center">
        <table class="ui very basic collapsing table" style="width:100%; max-width:800px;">
            <tbody>
                <tr>
                    <td class="collapsing">
                        <label>Username *</label>
                    </td>
                    <td>
                        <div class="ui input" style="width:100%;"><input id="txtUserName" type="text" maxlength="256" /></div>
                    </td>
                </tr>
                <tr>
                    <td class="collapsing">
                        <label>FullName *</label>
                    </td>
                    <td>
                        <div class="ui input" style="width: 100%;"><input id="txtFullName" type="text" maxlength="256" /></div>
                    </td>
                </tr>
                <tr>
                    <td class="collapsing">
                        <label>Email *</label>
                    </td>
                    <td>
                        <div class="ui input" style="width: 100%;"><input id="txtEmail" type="text" maxlength="256" /></div>
                    </td>
                </tr>
                <tr>
                    <td class="collapsing">
                        <label>Role *</label>
                    </td>
                    <td>
                        <div id="ddlRole" class="ui fluid selection dropdown">
                            <input id="txtRole" name="txtRole" type="hidden">
                            <i class="dropdown icon"></i>
                            <div class="default text">-- select role --</div>
                            <div id="divRoles" class="menu">
                                @Html.Raw(ViewBag.Items)
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="collapsing">
                        <label>Password *</label>
                    </td>
                    <td>
                        <div class="ui input" style="width: 100%;"><input id="txtPassword" type="password" maxlength="256" /></div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="/js/app/users/add.js?v=@Env.Versioning()"></script>
}