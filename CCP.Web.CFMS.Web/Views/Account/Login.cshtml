@using CCP.Web.CFMS.Web.Models
@model LoginViewModel
@using CCP.Web.CFMS.Web.Libraries.Core

@{
    ViewBag.Title = "Log in";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Chapel Fund Monitoring System</title>
    <!-- semanticui styles -->
    <link rel="stylesheet" href="/js/semantic-ui/semantic.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/button.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/checkbox.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/container.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/dimmer.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/divider.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/dropdown.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/flag.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/form.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/grid.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/icon.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/image.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/input.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/item.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/label.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/list.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/loader.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/menu.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/message.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/modal.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/popup.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/reset.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/sidebar.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/tab.min.css" />
    <link rel="stylesheet" href="/js/semantic-ui/components/table.css" />
    <!-- user styles -->
    <style type="text/css">
        html, body {
            background: url("/img/church2.jpg");
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }

        .formcontrol-style {
            padding-top: 20px;
        }

        .forgotpassword-style:link {
            font-size: 12px;
            color: #3ac0ff;
            text-decoration: none;
        }

        .forgotpassword-style:active {
            font-size: 12px;
            color: #3ac0ff;
            text-decoration: none;
        }

        .forgotpassword-style:visited {
            font-size: 12px;
            color: #3ac0ff;
            text-decoration: none;
        }

        .forgotpassword-style:hover {
            font-size: 12px;
            color: #3ac0ff;
            max-width: 200px;
            text-decoration: underline;
        }

        .copyright-style {
            font-size: 12px;
        }

        .ui.fluid.button, .ui.fluid.buttons {
            max-width: 300px;
        }

        .input-style {
            font-size: 16px;
            color: #fff !important;
            background-color: #008080 !important;
        }

        .color-h {
            color: #005755;
        }

        .dropdown-style {
            font-size: 16px;
            color: #fff !important;
            background-color: #008080 !important;
            padding: 10px;
            width: 300px;
        }
    </style>
</head>
<body style="padding-top: 160px; padding-left:60px;">
    <div class="ui container">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "formLogin", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div>
                <div class="row">
                    <div class="column center aligned title-style">
                        <h2 class="color-h">Enter your login credentials</h2>
                    </div>
                </div>
                <div id="divLogin">
                    <div class="row">
                        <div class="column center aligned formcontrol-style">
                            <div class="ui left icon input" style="color:#fff; width:300px;">
                                @Html.TextBoxFor(m => m.Username, new { @id = "txtUsername", @name = "txtUsername", @placeholder = "Username", @autocomplete = "off", @class = "input-style" })
                                <i class="user icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="column center aligned formcontrol-style">
                            <div class="ui left icon input" style="color:#fff; width:300px;">
                                @Html.PasswordFor(m => m.Password, new { @id = "txtPassword", @name = "txtPassword", @placeholder = "Password", @autocomplete = "off", @class = "input-style" })
                                <i class="lock icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="column center aligned formcontrol-style">
                            <div id="btnLogin" class="ui inverted fluid large blue button"><i class="ui loading"></i> SIGN IN</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="column center aligned formcontrol-style">
                        </div>
                    </div>
                </div>
                <div id="divForgotPassword" style="display:none;">
                    <div class="row">
                        <div class="column title-style">
                            <div style="padding-top:40px;">
                                <h3>Forgot Password</h3>
                            </div>
                            <div style="padding-top:10px; padding-bottom:10px;">
                                Enter the email address associated with your account and we will email you a link to reset your password.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="column center aligned formcontrol-style">
                            <div class="ui left icon input" style="color:#fff; width:300px;">
                                <input id="txtEmail" placeholder="Email" autocomplete="off" class="input-style" />
                                <i class="envelope open outline icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="column center aligned formcontrol-style">
                            <div id="btnSend" class="ui inverted fluid large blue button"><i class="ui loading"></i> SEND</div>
                        </div>
                    </div>
                </div>
                <div id="divForgotPasswordLinkSent" style="display:none;">
                    <div class="row">
                        <div class="column center aligned title-style">
                            <div style="padding-top:40px;">
                                <h3>The reset password link has been sent to your email.</h3>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="column center aligned formcontrol-style">
                            <div id="btnBack" class="ui inverted fluid large blue button"><i class="ui loading"></i> GO BACK TO LOGIN PAGE</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="column center aligned formcontrol-style copyright-style">
                        &copy; @DateTime.Now.Year Students of Central Colleges of the Philippines.<br />
                        All Rights Reserved.<br />
                        @Env.EnvironmentServerVersion()
                    </div>
                </div>
            </div>
        }

    </div>

    <!-- modal -->
    @Html.Partial("_ModalPartial")

    <!-- scripts -->
    <script type="text/javascript" src="/js/jquery-3.3.1.js"></script>
    <!-- semanticui scripts -->
    <script type="text/javascript" src="/js/semantic-ui/semantic.min.js"></script>
    <script type="text/javascript" src="/js/semantic-ui/components/checkbox.min.js"></script>
    <script type="text/javascript" src="/js/semantic-ui/components/dimmer.min.js"></script>
    <script type="text/javascript" src="/js/semantic-ui/components/dropdown.min.js"></script>
    <script type="text/javascript" src="/js/semantic-ui/components/embed.min.js"></script>
    <script type="text/javascript" src="/js/semantic-ui/components/form.min.js"></script>
    <script type="text/javascript" src="/js/semantic-ui/components/modal.min.js"></script>
    <script type="text/javascript" src="/js/semantic-ui/components/popup.min.js"></script>
    <script type="text/javascript" src="/js/semantic-ui/components/sidebar.min.js"></script>
    <script type="text/javascript" src="/js/semantic-ui/components/tab.min.js"></script>
    <script type="text/javascript" src="/js/app/common/helpers.js?v=@Env.Versioning()"></script>
    <script type="text/javascript" src="/js/app/login/login.js?v=@Env.Versioning()"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            @Html.Raw(ViewBag.Script)
        });
    </script>
    <!-- written by jhinglopez@gmail.com -->
</body>
</html>