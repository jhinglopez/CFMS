
@{
    ViewBag.Title = "Change Password";
}

@section styles
{
    <style>
        .ui.table tr td {
            border-bottom: none;
            border-top: none;
        }

        .ui.basic.table tbody tr {
            border-bottom: none;
            border-top: none;
        }
    </style>
}

<div class="ui breadcrumb">
    <a class="section" href="/">Home</a>
    <div class="divider"> / </div>
    <div class="section">Account</div>
    <div class="divider"> / </div>
    <div class="active section">Change Password</div>
</div>

<div style="padding-top:40px;">
    <div align="right">
        <button id="btnSave" class="ui primary button" style="width:120px;">Save</button>
    </div>
    <hr />
    <div style="padding-top:10px;" align="center">
        <table class="ui very basic collapsing table" style="width:100%; max-width:800px;">
            <tbody>
                <tr>
                    <td class="collapsing">
                        <label>Old Password *</label>
                    </td>
                    <td>
                        <div class="ui input" style="width:100%"><input id="txtOldPassword" type="password" maxlength="256" /></div>
                    </td>
                </tr>
                <tr>
                    <td class="collapsing">
                        <label>New Password *</label>
                    </td>
                    <td>
                        <div class="ui input" style="width:100%"><input id="txtNewPassword" type="password" maxlength="256" /></div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="/js/app/account/changepassword.js"></script>
}